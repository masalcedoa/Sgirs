<div class="row">
  {{#each preguntas}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ idPregunta }} <a href="/asks/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ pregunta }} </p>
        <!--<p>{{ indArchivo }} </p>-->
        <div class="form-check">

          <label class="form-check-label" for="flexCheckDefault">
            <input class="form-check-input" name="indArchivo" type="checkbox"
            value={{indArchivo}} id="indArchivo"

           {{#if indArchivo}}checked="checked"{{/if}}


             >
            Permite Archivo
          </label>
        </div>
        <div class="form-check">

          <label class="form-check-label" for="flexCheckDefault">
            <input class="form-check-input" name="indTexto" type="checkbox" value={{ indTexto}} id="indTexto"
            
           {{#if indTexto}}checked="checked"{{/if}}
            >
            Permite Texto
          </label>
        </div>
        <!--<p>{{ indTexto }} </p>-->
        <!-- DELETE REQUEST -->
        <form action="/asks/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p clsss="lead">Hola No hay preguntas aun.</p>
      <a href="/ask/add" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>