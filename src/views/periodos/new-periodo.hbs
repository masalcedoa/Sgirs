<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Nuevo Periodo</h3>
    </div>
    <div class="card-body">
      <form action="/Periodos/new-Periodo" method="POST">
        <div class="form-group">
          <input type="text" name="Periodo" class="form-control" placeholder="Periodo" autofocus />
        </div>
        <div class="form-group">
          <textarea name="Descripcion" class="form-control" placeholder="Descripcion"></textarea>
        </div>


        <div class="form-check">

          <label class="form-check-label" for="flexCheckDefault">
            <input class="form-check-input" name="Estado" type="checkbox" value={{ Estado}} id="Estado" {{#if
              Estado}}checked="checked" {{/if}}>
            Activo
          </label>
        </div>

        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Grabar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>