{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Modificar Periodo</h3>
    </div>
    <div class="card-body">
      <form action="/Periodos/edit-Periodo/{{Periodos._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group" >
          <input type="text"  name="Periodo" class="form-control" value="{{Periodos.Periodo}}"/>
        </div>
        <div class="form-group">
          <textarea name="Descripcion" class="form-control">{{Periodos.Descripcion}}</textarea>
        </div>


                <div class="form-check">

          <label class="form-check-label" for="flexCheckDefault">
            <input class="form-check-input" name="Estado" type="checkbox"
            value={{Periodos.Estado}} id="Estado"

           {{#if Periodos.Estado}}checked="checked"{{/if}}


             >
            Permite Activo
          </label>
        </div>


        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
