<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Registro Cuenta
      </div>
      <div class="card-body">
        <form action="/usuario/signup" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="responsable" placeholder="Responsable"
              value="{{responsable}}">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="direccion" placeholder="Direccion" value="{{direccion}}">
          </div>

          <div class="form-group">
            <input type="text" class="form-control" name="documento_sgirs" placeholder="Documento_sgirs" value="">
          </div>


          <div class="form-group">
            <input type="text" class="form-control" name="contacto" placeholder="Contacto" value="{{contacto}}">
          </div>
         
          <div class="form-group">
            <select class="form-control" name="codSector"  id="codSector"  placeholder="Sectores">
              <option value="na" selected></option>Selecione Sector</option>
               {{#each lSectores}}
                <option value={{CodSector}}>{{ Descripcion }}</option>
              {{/each}}
            </select>
          </div>

          <div class="form-group">
            <input type="email" class="form-control" name="correo" placeholder="Correo" value="{{correo}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password"
              value="{{confirm_password}}">
          </div>
          <button class="btn btn-primary btn-block">
            Crear
          </button>
        </form>
      </div>
    </div>
  </div>
</div>