<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h1 class="h4">
          Iniciar Cuenta
        </h1>
      </div>
      <img class="rounded-circle mx-auto d-block logo m-4" src="/img/logo.png" alt="Logo">
      <div class="card-body">
        <form action="/usuario/signinrest" method="POST">

            <div class="form-group">
              <!-- <input type="text" class="form-control" name="codSector" placeholder="Sector" autofocus >-->
              <select class="form-control" name="codSector" id="codSector" placeholder="Sector">
                {{#each lSectores}}
                <option value={{CodSector}}>{{ Descripcion }}</option>
                {{/each}}
              </select>
            </div>
            <!-- <input type="text" class="form-control" name="codSector" placeholder="Sector" autofocus >-->
            <select class="form-control" name="Periodo" id="Periodo" placeholder="Periodo">
              {{#each lPeriodos}}
              <option type="date" value={{Periodo}}>{{ Periodo }}</option>
              {{/each}}
            </select>
          </div>

          <button class="btn btn-primary btn-block">
            Entrar
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
